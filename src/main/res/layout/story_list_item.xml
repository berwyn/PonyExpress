<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:layout_marginStart="8dp"
              android:layout_marginEnd="8dp"
              android:layout_marginTop="16dp"
              android:layout_marginBottom="16dp">

    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:padding="@dimen/story_list_item_textarea_padding">

        <TextView
                android:id="@+id/story_item_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="Observations on MLP: Where are the stallions?"/>

        <TextView
                android:id="@+id/story_item_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:fontFamily="sans-serif-light"
                android:text="2 hours ago"
                android:layout_gravity="left|center_vertical"
                android:textColor="@android:color/darker_gray"/>
    </LinearLayout>

    <ImageView
            android:id="@+id/story_item_image"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/story_list_item_image_size"
            android:scaleType="centerCrop"/>

</LinearLayout>